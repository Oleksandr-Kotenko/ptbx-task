{
  "env": {
    "es2021": true,
    "node": true,
    "jest": true
  },
  "extends": [
    "airbnb-base",
    "eslint:recommended",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "rules": {
    "class-methods-use-this": "off",
    "no-console": "error",
    "import/prefer-default-export": "off",
    "no-underscore-dangle": ["error", { "allowAfterThis": true }],
    "curly": ["error", "all"],
    "no-confusing-arrow": ["error", { "allowParens": false }],
    "no-restricted-syntax": ["error", "SequenceExpression"]
  }
}
